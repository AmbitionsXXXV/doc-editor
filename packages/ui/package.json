{
	"name": "@doc-editor/ui",
	"private": true,
	"sideEffects": ["*.css"],
	"version": "0.1.0",
	"files": ["dist"],
	"keywords": [
		"editor",
		"typescript",
		"prosemirror",
		"wysiwyg",
		"rich-text-editor",
		"feishu",
		"notion",
		"yjs",
		"block-based",
		"tiptap"
	],
	"description": "基于 Prosemirror 和 Tiptap 实现的类 Notion、飞书文档风格可扩展文本编辑器。",
	"type": "module",
	"source": "src/index.ts",
	"main": "build/cjs/index.js",
	"module": "build/esm/index.js",
	"exports": {
		"./global.css": "./dist/global.css",
		"./*": "./src/components/ui/*.tsx",
		"./lib/*": "./src/lib/*.ts"
	},
	"scripts": {
		"ui": "pnpm dlx shadcn@canary",
		"clean": "node ../../tools/clean.js dist node_modules .turbo",
		"build": "tailwindcss -i ./src/global.css -o ./dist/global.css",
		"dev": "tailwindcss -i ./src/global.css -o ./dist/global.css --watch"
	},
	"dependencies": {
		"@radix-ui/react-avatar": "^1.1.3",
		"@radix-ui/react-collapsible": "^1.1.3",
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-dropdown-menu": "^2.1.6",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-popover": "^1.1.6",
		"@radix-ui/react-scroll-area": "^1.2.3",
		"@radix-ui/react-separator": "^1.1.2",
		"@radix-ui/react-slot": "1.1.2",
		"@radix-ui/react-tooltip": "^1.1.8",
		"@tailwindcss/cli": "^4.0.16",
		"@tailwindcss/postcss": "^4.0.16",
		"autoprefixer": "^10.4.21",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.484.0",
		"postcss": "^8.5.3",
		"tailwind-merge": "^3.0.2",
		"tailwindcss": "^4.0.16"
	},
	"devDependencies": {
		"@doc-editor/config-tailwind": "workspace:*",
		"@radix-ui/colors": "^3.0.0",
		"@types/node": "^22.13.13",
		"@types/react": "^19.0.12",
		"@types/react-dom": "^19.0.4",
		"rimraf": "^6.0.1"
	},
	"peerDependencies": {
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	}
}
