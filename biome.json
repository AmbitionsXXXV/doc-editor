{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noBannedTypes": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"useValidAnchor": "off",
				"noSvgWithoutTitle": "off"
			},
			"correctness": {
				"noUnusedVariables": "error",
				"useExhaustiveDependencies": "off"
			},
			"suspicious": {
				"noConsoleLog": "warn",
				"noExplicitAny": "off",
				"noAssignInExpressions": "off"
			},
			"style": {
				"useImportType": "off",
				"noParameterAssign": "off",
				"noNegationElse": "error",
				"useShorthandArrayType": "error",

				"noNonNullAssertion": "off",
				"useSelfClosingElements": "off"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {
						"attributes": ["className"],
						"functions": ["cn"]
					}
				}
			}
		},
		"ignore": ["./tools/*.js"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 85
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"jsxQuoteStyle": "double"
		}
	},
	"files": {
		"ignore": [
			"apps/api/**",
			"**/node_modules",
			"**/dist",
			"**/build",
			"**/.turbo",
			"**/.react-router",
			"**/coverage",
			"**/tsconfig.*.json"
		]
	}
}
