{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useButtonType": "off",
				"useValidAnchor": "off",
				"noSvgWithoutTitle": "off"
			},
			"correctness": {
				"noUnusedVariables": "error",
				"useExhaustiveDependencies": "off"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noConsoleLog": "warn"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noNegationElse": "error",
				"useShorthandArrayType": "error"
			}
		},
		"ignore": ["./tools/*.js"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 85
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"jsxQuoteStyle": "double"
		}
	},
	"files": {
		"ignore": [
			"**/node_modules",
			"**/dist",
			"**/build",
			"**/.turbo",
			"**/coverage",
			"**/tsconfig.*.json"
		]
	}
}
